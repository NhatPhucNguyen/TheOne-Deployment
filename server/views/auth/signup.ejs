<%- include ../partials/header.ejs %>

<main class="container pb-5 mb-5">
  <div class="row justify-content-center">

    <div class="col-md-8">
      <h1 class="text-center mb-3"><%= title %></h1>
      <form action="/auth/signup" method="post">

        <div class="row g-3">
          <hr class="my-4">
          <div class="col-md-6">
            <label for="username" class="form-label">User Name</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="user01" required>
          </div>
          <div class="col-md-6">
            <label for="displayname" class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayname" name="displayname" placeholder="jhon doe" required>
          </div>
          <div class="col-md-12">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" name="email" placeholder="jhon.doe@email.com" required>
          </div>
          <div class="col-md-6">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="" required>
          </div>
          <div class="col-md-6">
            <label for="confirmpw" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="confirmpw" name="confirmpw" placeholder="" required>
          </div>

          <hr class="my-4">
          <div class="d-grid gap-2 col-6 mx-auto">
            <input class="btn btn-primary" type="submit" value="Create Account">
          </div>
          <div class="d-grid gap-2 col-12 text-center my-4">
            <h6>Already have an account? <a href="/auth/login" class="">Log in.</a></h6>
          </div>
        </div>

      </form>
    </div>

  </div>

</main>

<%- include ../partials/footer.ejs %>